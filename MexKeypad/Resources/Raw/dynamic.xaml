<?xml version = "1.0" encoding = "UTF-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MexKeypad">
  <Grid RowSpacing="5"
        ColumnSpacing="5">
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Label Grid.ColumnSpan="4" Text="动态解析示例：" />
    <Editor Grid.Row="1" Grid.ColumnSpan="4" x:Name="dynInputExample" Text="" />
    <Button Grid.Row="2"
            Grid.Column="0"
            MinimumHeightRequest="80"
            Text="标准按键"
            StyleClass="mexdyn"
            CommandParameter="dynInputExample" />
    <Button Grid.Row="2"
            Grid.Column="1"
            Text="按下按键"
            StyleClass="mexdyn-down"
            CommandParameter="dynInputExample" />
    <Button Grid.Row="2"
            Grid.Column="2"
            Text="释放按键"
            StyleClass="mexdyn-up"
            CommandParameter="dynInputExample" />
    <Button Grid.Row="2"
            Grid.Column="3"
            Text="发送文本"
            StyleClass="mexdyn-unicode"
            CommandParameter="dynInputExample" />
  </Grid>
</ContentView>