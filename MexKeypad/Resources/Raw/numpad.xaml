<?xml version = "1.0" encoding = "UTF-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <Grid RowSpacing="5"
        ColumnSpacing="5">
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>
    <Button Grid.Row="0"
            Grid.Column="0"
            Text="Num&#10;Lock"
            StyleClass="mexkey"
            CommandParameter="vk:NumLock" />
    <Button Grid.Row="0"
            Grid.Column="1"
            Text="/"
            StyleClass="mexkey"
            CommandParameter="vk:Divide" />
    <Button Grid.Row="0"
            Grid.Column="2"
            Text="*"
            StyleClass="mexkey"
            CommandParameter="vk:Multiply" />
    <Button Grid.Row="0"
            Grid.Column="3"
            Text="-"
            StyleClass="mexkey"
            CommandParameter="vk:Subtract" />
    <Button Grid.Row="1"
            Grid.Column="0"
            Text="7"
            StyleClass="mexkey"
            CommandParameter="vk:NumPad7" />
    <Button Grid.Row="1"
            Grid.Column="1"
            Text="8"
            StyleClass="mexkey"
            CommandParameter="vk:NumPad8" />
    <Button Grid.Row="1"
            Grid.Column="2"
            Text="9"
            StyleClass="mexkey"
            CommandParameter="vk:NumPad9" />
    <Button Grid.Row="1"
            Grid.Column="3"
            Grid.RowSpan="2"
            Text="+"
            StyleClass="mexkey"
            CommandParameter="vk:Add" />
    <Button Grid.Row="2"
            Grid.Column="0"
            Text="4"
            StyleClass="mexkey"
            CommandParameter="vk:NumPad4" />
    <Button Grid.Row="2"
            Grid.Column="1"
            Text="5"
            StyleClass="mexkey"
            CommandParameter="vk:NumPad5" />
    <Button Grid.Row="2"
            Grid.Column="2"
            Text="6"
            StyleClass="mexkey"
            CommandParameter="vk:NumPad6" />
    <Button Grid.Row="3"
            Grid.Column="0"
            Text="1"
            StyleClass="mexkey"
            CommandParameter="vk:NumPad1" />
    <Button Grid.Row="3"
            Grid.Column="1"
            Text="2"
            StyleClass="mexkey"
            CommandParameter="vk:NumPad2" />
    <Button Grid.Row="3"
            Grid.Column="2"
            Text="3"
            StyleClass="mexkey"
            CommandParameter="vk:NumPad3" />
    <Button Grid.Row="3"
            Grid.Column="3"
            Grid.RowSpan="2"
            Text="Enter"
            StyleClass="mexkey"
            CommandParameter="vk:*Return" />
    <Button Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="0"
            StyleClass="mexkey"
            CommandParameter="vk:NumPad0" />
    <Button Grid.Row="4"
            Grid.Column="2"
            Text="."
            StyleClass="mexkey"
            CommandParameter="vk:Decimal" />
  </Grid>
</ContentView>